<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".Activities.Admin.Admin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Admin Account"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="20dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Pendding_offers"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/my_button_bg"
        android:onClick="pending_offers_action"
        android:text="Pending offers"
        android:textSize="15sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/offers_history"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/my_button_bg"
        android:onClick="offers_history_action"
        android:text="offers history"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/offers_history2"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/my_button_bg"
        android:onClick="view_profile"
        android:text="View Profile"
        android:textSize="15sp"
        android:textStyle="bold" />


</LinearLayout>